    'Name'          : 'Midwest Dreamin',
    'BillingStreet' : '17 E Monroe St',
    'BillingCity'   : 'Chicago',
    'BillingState'  : 'Illinois'
}, function( error, accountResponse ) {
    if ( error ) { /* handle error */ }
    else {
        // created account, now try to create contact...
        // POST &lt;instance&gt;/services/data/39.0/sobjects/Contact
        conn.sobject( 'Contact' ).create({
            'AccountId' : accountResponse.id,
            'FirstName' : 'Eric',
            'LastName'  : 'Dreshfield'
        }, function( error, contactResponse ) {
            if ( error ) {
                // handle error... but can't "rollback" account
                // because that transaction committed
                // do we delete account or keep moving forward?
            } else {
                // account + contact have been created!
            }
        });
    }
});
            </code></pre>
        </div>

    </div>

    <div id="response" class="slds-grid slds-hide" style="background-color:#F0F0F0;">

        <div class="slds-col slds-size_1-of-2">
            <div class="slds-text-heading_medium" style="background-color:#FFF;">Happy Path</div>
            <pre><code class="js" style="height: inherit">
// account
{{accountJsonResponse}}

// contact
{{contactJsonResponse}}
            </code></pre>
        </div>

        <div class="slds-col slds-size_1-of-2">
            <div class="slds-text-heading_medium" style="background-color:#FFF;">Unhappy Path</div>
            <pre><code class="js">
// account
{
  "id": "0011a00000hAHdEAAW",
