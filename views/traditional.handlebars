  "errors": []
}

// contact
{
  "name": "FIELD_CUSTOM_VALIDATION_EXCEPTION",
  "errorCode": "FIELD_CUSTOM_VALIDATION_EXCEPTION",
  "fields": [
    "MailingPostalCode"
  ]
}
            </code></pre>
        </div>

    </div>

</div>